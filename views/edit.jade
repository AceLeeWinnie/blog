extends layout

block content
  - if (post)
    form(method='post')
      label(for='title') 标题
      input(type='text' name='title' value='#{post.title}' disabled='disabled')
      br
      label(for='tag') 标签
      each tag, index in post.tags
        input(type='text' name='tag'+index, value=tag)
      br
      label(for='post') 正文
      textarea(name='post' rows='20' cols='100') #{post.post}
      br
      input(type='submit' value='保存修改')
