    span
      a(title='存档' href='/archive') archive
    span
      a(title='上传' href='/upload') upload
    span
      a(title='发表' href="/post") post
    span
      a(title='退出' href="/logout") logout
  else
    span
      a(title='登录' href="/login") login
    span
      a(title='注册' href="/reg") register
